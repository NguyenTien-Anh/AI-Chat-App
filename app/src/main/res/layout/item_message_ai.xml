<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/aiAvatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_sparkle"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/messageText"
        android:contentDescription="AI"/>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_ai"
        android:padding="12dp"
        android:textColor="@color/light_gray"
        android:textSize="13sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toEndOf="@id/aiAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout> 